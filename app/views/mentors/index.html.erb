<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
      <th>Location</th>
      <th>Price</th>
      <th>Description</th>
      <th>Industries</th>
      <th>Expertise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= mentor.profession %></td>
        <td><%= mentor.location %></td>
        <td><%= mentor.price %></td>
        <td><%= mentor.description %></td>
        <td><%= mentor.industries %></td>
        <td><%= mentor.expertise %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

